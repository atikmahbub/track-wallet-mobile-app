# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

# Avoid use_frameworks! unless you absolutely need it
linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'TrackWalletApp' do
  config = use_native_modules!

  use_react_native!(
    :new_arch_enabled => false,   # keep OFF until build is green
    :hermes_enabled   => true,
    :path             => config[:reactNativePath],
    :app_path         => "#{Pod::Config.instance.installation_root}/.."
  )

  # RNSVG (react-native-svg)
  pod 'RNSVG', :path => '../node_modules/react-native-svg'

  # Lottie
  pod 'lottie-react-native', :path => '../node_modules/lottie-react-native'

  target 'TrackWalletAppTests' do
    inherit! :complete
  end

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )

    # Fix non-modular include for RNSVG only
    installer.pods_project.targets.each do |t|
      next unless t.name == 'RNSVG'
      t.build_configurations.each do |bc|
        bc.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
        bc.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'NO'
      end
    end
  end
end