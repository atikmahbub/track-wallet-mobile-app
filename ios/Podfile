source 'https://cdn.cocoapods.org/'
source 'https://github.com/facebook/react-native.git'

require 'fileutils'
require File.join(File.dirname(`node --print "require.resolve('expo/package.json')"`), 'scripts/autolinking')

# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    { paths: [process.argv[1]] },
  )', __dir__]).strip

platform :ios, '15.1'
prepare_react_native_project!

# If you use nvm, point Node for Xcode build phases via ENV
ENV['NODE_BINARY'] = '/Users/atikmahbub/.nvm/versions/node/v20.19.4/bin/node' # <— put your `which node` here

# Avoid use_frameworks! unless necessary
linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

# Disable expo-router native pod (ExpoHead)
Pod::HooksManager.register('cocoapods', :pre_install) do |_|
  expo_head = File.expand_path('../node_modules/expo-router/ios/ExpoHead.podspec', __dir__)
  if File.exist?(expo_head)
    disabled = "#{expo_head}.disabled"
    FileUtils.mv(expo_head, disabled) unless File.exist?(disabled)
    Pod::UI.puts "⏭️  Disabled ExpoHead.podspec (renamed to ExpoHead.podspec.disabled)".yellow
  end
end

target 'TrackWalletApp' do
  use_expo_modules!

  config_command = [
    'node',
    '--no-warnings',
    '--eval',
    'require(require.resolve("expo-modules-autolinking", { paths: [require.resolve("expo/package.json")] }))(process.argv.slice(1))',
    'react-native-config',
    '--json',
    '--platform',
    'ios'
  ]
  config = use_native_modules!(config_command)

  use_react_native!(
    :hermes_enabled   => true,
    :new_arch_enabled => true, # Reanimated v4 + Worklets require New Arch
    :path             => config[:reactNativePath],
    :app_path         => "#{Pod::Config.instance.installation_root}/.."
  )

  # Link pods to local sources to ensure versions match JS
  pod 'RNReanimated', :path => '../node_modules/react-native-reanimated'
  pod 'RNScreens',    :path => '../node_modules/react-native-screens'
  pod 'RNSVG',        :path => '../node_modules/react-native-svg'
  pod 'lottie-react-native', :path => '../node_modules/lottie-react-native'

  target 'TrackWalletAppTests' do
    inherit! :complete
  end

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )

    # Optional: non-modular include fix for RNSVG
    installer.pods_project.targets.each do |t|
      next unless t.name == 'RNSVG'
      t.build_configurations.each do |bc|
        bc.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'
        bc.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'NO'
      end
    end
  end
end